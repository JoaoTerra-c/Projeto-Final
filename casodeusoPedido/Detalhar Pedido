#include <stdio.h>

// Detalhar o pedido

void detalharPedido() {
    int codigo;
    printf("\nInforme o c처digo do pedido: ");
    scanf("%d", &codigo);

    for (int i = 0; i < qtdPedidos; i++) {
        if (pedidos[i].pedidoCOD == codigo) {
            printf("\n=== DETALHES DO PEDIDO ===\n");
            printf("C처digo do Pedido: %d\n", pedidos[i].pedidoCOD);
            printf("C처digo do Cliente: %d\n", pedidos[i].cliente);
            printf("Data: %s\n", pedidos[i].data);
            printf("Total: R$ %.2f\n", pedidos[i].total);
            return;
        }
    }

    printf("Pedido n찾o encontrado.\n");
}
