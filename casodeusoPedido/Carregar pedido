#include <stdio.h>
//Carrega pedido

void carregarPedidos() {
    FILE *f = fopen("Pedidos.csv", "r");
    if (!f) {
        printf("Nenhum arquivo encontrado.\n");
        return;
    }

    qtdPedidos = 0;
    while (fscanf(f, "%d;%d;%10[^;];%f\n",
                  &pedidos[qtdPedidos].pedidoCOD,
                  &pedidos[qtdPedidos].cliente,
                  pedidos[qtdPedidos].data,
                  &pedidos[qtdPedidos].total) == 4) {
        qtdPedidos++;
    }

    fclose(f);
    printf("%d pedidos carregados com sucesso.\n", qtdPedidos);
}
